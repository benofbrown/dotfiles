[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /
mount-1 = /home
mount-2 = /boot

label-mounted = %{F#b58900}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint%
label-unmounted-font = 5
label-unmounted-foreground = ${colors.foreground-alt}

[module/workfilesystem]
inherit = module/filesystem
mount-2 = /usr/local
mount-3 = /home/ben/data

[module/mpd]
type = internal/mpd
format-online = <bar-progress> <label-song> <label-time>
format-playing = <bar-progress> <label-song> <label-time> 🎜

icon-prev = ⏮
icon-stop = ⏹
icon-play = ⏵
icon-pause = ⏸
icon-next = ⏭

label-song = %title% - %artist%
label-song-maxlen = 42
label-song-ellipsis = true

bar-progress-width = 20
bar-progress-indicator = |
bar-progress-fill = ─
bar-progress-empty = ─

[module/cpu]
type = internal/cpu
